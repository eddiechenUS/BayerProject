                                        var result = Things[productionLine].GetDailyPerformance();
                                        
                                        var yAxisMin = 0;
                                        var yAxisMax = 0;
                                        
                                        var tableLength = result.rows.length;
                                        
                                        for (var x = 0; x < tableLength; x++) {
                                        	var day = result.rows[x];
                                        	
                                            var dayTableLength = day.dailyPerformance.rows.length;
                                            
                                            for (var y = 0; y < tableLength; y++) {
                                                var row = day.dailyPerformance.rows[y];
                                                
                                                if (row.quantityProduced > yAxisMax) {
                                                    yAxisMax = row.quantityProduced;
                                                }
                                                if (row.targetQuantity > yAxisMax) {
                                                    yAxisMax = row.targetQuantity;
                                                }
                                            }
                                        }
                                        
                                        var newField = new Object();
                                        newField.name = "yAxisMin";
                                        newField.baseType = 'NUMBER';
                                        result.AddField(newField);
                                        var newField = new Object();
                                        newField.name = "yAxisMax";
                                        newField.baseType = 'NUMBER';
                                        result.AddField(newField);
                                        
                                        for (var x = 0; x < tableLength; x++) {
                                        	var day = result.rows[x];
                                            day.yAxisMin = yAxisMin;
                                            day.yAxisMax = yAxisMax;
                                        }
                                        ]]>
